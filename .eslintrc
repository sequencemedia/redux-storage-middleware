{
  "root": true,
  "extends": "standard",
  "env": {
    "es6": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
